rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Check user authorization status
     * @returns {Boolean}
     */
    function isAuthorized() {
      return request.auth != null
    }

    match /users/{userId} {
      allow read, write: if isAuthorized() && (userId == request.auth.uid)

      match /{sub=**} {
        allow read, write;
      }
    }

  }
}
